@model List<DDAC.Models.ScheduleDetails>
@{
    ViewBag.Title = "ViewSchedule";
}

<style>

    table, th, td {
        border: 1px solid white;
        border-collapse: collapse;
    }

    th, td {
        padding: 5px;
    }
</style>

<div class="container-fluid">
    <h2>ViewSchedule</h2>

    <table id="book2" style="width: 100%">

        <tr>
            <th>Schedule ID</th>
            <th>Departure Date & Time</th>
            <th>Arrival Date & Time</th>
            <th>Origin</th>
            <th>Destination</th>
            <th>Ship Name</th>
            <th>Remaining Bay Size</th>
            <th>Action</th>
        </tr>

        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.StartDate</td>
                <td>@book.EndDate</td>
                <td>@book.Origin</td>
                <td>@book.Destination</td>
                <td>@book.ShipDetails.ShipName</td>
                <td>@book.ShipDetails.RemainingBaySize</td>
                <td>
                    <span class="label label-success">@Html.ActionLink("Book", "Booking", new { id = book.Id })</span>
                </td>
            </tr>
        }

    </table>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            $('#book2').DataTable();
        });
    </script>

}